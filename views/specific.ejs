			<div class="row" style="padding:0% 3%;">
				<div class="col-xl-9" style="padding: 0 10px; ">
					<div id="carouselExampleIndicators" style=" margin-bottom	: 20px;" class="carousel slide"
						data-ride="carousel">
						<ol class="carousel-indicators">
							<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
							<%for(var t = 1 ; t<advertisement.images.length;t++){ %>
							<li data-target="#carouselExampleIndicators" data-slide-to=<%= t %>></li>
							<% } %>
						</ol>
						<div class="carousel-inner" style="border-radius: 0.5%;background-color: rgb(15, 218, 123);">
							<%if(advertisement.images.length!=0){ %>
								<%for(var k = 0 ; k<advertisement.images.length;k++){ %>
									<% if(k==0){ %>
										<div class="carousel-item active">
											<img style="object-fit: contain;" height="500px" class="d-block w-100"
												src=<%= "/ad_images/"+advertisement.images[k]%> alt="images">
										</div>
									
									<% }else{ %>
										<div class="carousel-item">
											<img style="object-fit: contain;" height="500px" class="d-block w-100"
												src=<%= "/ad_images/"+advertisement.images[k]%> alt="images">
										</div>
									<%}%>  
									
								<% } %>
							<%}else{ %>
								<div class="carousel-item active">
									<img style="object-fit: contain;" height="500px" class="d-block w-100"
										src="/ad_images/no_image.jpeg"alt="images">
								</div>
							<% } %>

						</div>
						<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
							data-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="sr-only">Previous</span>
						</a>
						<a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
							data-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="sr-only">Next</span>
						</a>
					</div>
					<div class="card bg-pink-400 text-white text-center p-3"
						style="background-image: url(/global_assets/images/backgrounds/panel_bg.png); background-size: contain;">
						<div>
							<h1>Açıklamalar</h1><i class="icon-quotes-right"></i>
						</div>

						<blockquote class="blockquote mb-0">
							<p class="text-left"><%=advertisement.description %> </p>
							
						</blockquote>
					</div>
				</div>
				<div class="col-xl-3" style="padding: 0;">
					<div class="card card-body bg-blue text-center"
						style="background-image: url(/global_assets/images/backgrounds/panel_bg.png); background-size: contain;">
						<div class="mb-3">
							<h5 class="font-weight-semibold mb-0 mt-1">
								<%=advertisement.user.name%>
							</h5>

							<span class="d-block"><%=advertisement.user.city%>/<%=advertisement.user.town%></span>
						</div>

						<a href="#" class="d-inline-block mb-3">
							<img style="object-fit: contain;"src=<%="/profile_images/"+advertisement.user.profile_image%>
								class="rounded-round" width="150" height="150" alt="profile image">
						</a>

						<ul class="list-inline mb-0">
							<li class="list-inline-item"><a href="#"
									class="btn btn-outline btn-icon text-white btn-lg border-white rounded-round">
									<i class="icon-phone"></i></a>
							</li><span>+90 <%=advertisement.user.phone.toString().slice(0,3)+" "+advertisement.user.phone.toString().slice(3,6)+" "+advertisement.user.phone.toString().slice(6)%></span>
							<br>
							<% if(advertisement.user.facebook){%>
								<li class="list-inline-item"><a href=<%="https://www.facebook.com/"+advertisement.user.facebook%> 
									class="btn btn-outline btn-icon text-white btn-lg border-white rounded-round">
									<i class="icon-facebook"></i></a>
								</li><span><%="facebook/"+advertisement.user.facebook%></span>
								<br>
							<% } %>
							<% if(advertisement.user.instagram){%>
								<li class="list-inline-item"><a href=<%="https://www.instagram.com/"+advertisement.user.instagram%> 
									class="btn btn-outline btn-icon text-white btn-lg border-white rounded-round">
									<i class="icon-instagram"></i></a>
								</li><span><%="instagram/"+advertisement.user.instagram%></span>
								<br>
							<% } %>
							
						</ul>
					</div>
					<div class="card">
						<div class="card-header header-elements-inline">
							<h5 class="card-title">İlan Detayları</h5>
							<div class="header-elements">
								<div class="list-icons">
									<a class="list-icons-item" data-action="collapse"></a>
									<a class="list-icons-item" data-action="reload"></a>
									<a class="list-icons-item" data-action="remove"></a>
								</div>
							</div>
						</div>

						<table class="table">

							<tbody>

								<tr>
									<th scope="row">Şehir</th>
									<td></td>
									<% for(var b =0 ;b<81;b++){ %>
									<%if(b===parseInt(advertisement.city)){  %>
									<td><%=cities[b]%></td>
									<% } %>

									<% } %>
									<td> </td>

								</tr>
								<tr>
									<th scope="row">İlçe</th>
									<td> </td>
									<% for(var a =0 ;a<dorms.length;a++){ %>
									<%if(dorms[a].id==advertisement.town){  %>
									<td><%=dorms[a].name%></td>
									<% break; %>
									<% } %>

									<% } %>


								</tr>

								<tr>
									<th scope="row">Marka</th>
									<td> </td>
									<td><%=advertisement.brand.slice(0,1).toUpperCase()+advertisement.brand.slice(1)%>
									</td>

								</tr>
								<tr>
									<th scope="row">Fiyat</th>
									<td> </td>
									<td><%=advertisement.price%> ₺
									</td>

								</tr>
								<tr>
									<th scope="row">Seri</th>
									<td></td>

									<td><%=advertisement.series.slice(0,1).toUpperCase()+advertisement.series.slice(1)%>
									</td>

								</tr>
								<tr>
									<th scope="row">Model</th>
									<td></td>
									<td><%=advertisement.model.slice(0,1).toUpperCase()+advertisement.model.slice(1)%>
									</td>

								</tr>
								<tr>
									<th scope="row">Yıl</th>
									<td></td>
									<td><%=advertisement.year%></td>
								</tr>
								<tr>
									<th scope="row">Km</th>
									<td></td>
									<td><%=advertisement.km%></td>
								</tr>
								<tr>
									<th scope="row">Yakıt</th>
									<td> </td>
									<td><%=advertisement.fuel.slice(0,1).toUpperCase()+advertisement.fuel.slice(1)%>
									</td>
								</tr>
								<tr>
									<th scope="row">Motor Gücü</th>
									<td></td>
									<td><%=advertisement.engine_power%></td>
								</tr>
								<tr>
									<th scope="row">Motor Hacmi</th>
									<td></td>
									<% if(advertisement.engine_volume){%>
									<td><%=advertisement.engine_volume%></td>
									<% }else{%>
									<td>Belirtilmemiş</td>
									<%} %>
								</tr>
								<tr>
									<th scope="row">Çekiş</th>
									<td></td>
									<% if(advertisement.car_traction){%>
									<td><%=advertisement.car_traction.slice(0,1).toUpperCase()+advertisement.car_traction.slice(1)%></td>
									<% }else{%>
									<td>Belirtilmemiş</td>
									<%} %>
								</tr>
								<tr>
									<th scope="row">Renk</th>
									<td></td>
									<% if(advertisement.color){%>
									<td><%=advertisement.color.slice(0,1).toUpperCase()+advertisement.color.slice(1)%>
									</td>
									<% }else{%>
									<td>Belirtilmemiş</td>
									<%} %>
								</tr>
								<tr>
									<th scope="row">Hasar</th>
									<td></td>
									<% if(advertisement.isDamaged){%>
									<td>Var</td>
									<% }else{%>
									<td>Yok</td>
									<%} %>
								</tr>
								<% if(advertisement.isDamaged){%>
								<tr>
									<th scope="row">Hasar Miktarı</th>
									<td></td>
									<td><%=advertisement.damageAmount%></td>
								</tr>
								<% }%>

								<tr>
									<th scope="row">Garantisi</th>
									<td></td>
									<% if(advertisement.guarantee){%>
									<td>Var</td>
									<% }else{%>
									<td>Yok</td>
									<%} %>
								</tr>
								<tr>
									<th scope="row">Durumu</th>
									<td></td>
									<% if(advertisement.status){%>
									<td><%=advertisement.status.slice(0,1).toUpperCase()+advertisement.status.slice(1)%>
									</td>
									<% }else{%>
									<td>Belirtilmemiş</td>
									<%} %>
								</tr>

								</tr>
								<tr>
									<th scope="row">Takas</th>
									<td></td>
									<% if(advertisement.trade){%>
									<td>Var</td>
									<% }else{%>
									<td>Belirtilmemiş</td>
									<%} %>
								</tr>

								<tr>
									<th scope="row">Kimden</th>
									<td></td>
									<% if(advertisement.from){%>
									<td><%=advertisement.from.slice(0,1).toUpperCase()+advertisement.from.slice(1)%>
									</td>
									<% }else{%>
									<td>Belirtilmemiş</td>
									<%} %>
								</tr>
								<tr>
									<th scope="row">Plaka</th>
									<td></td>
									<% if(advertisement.plate_nation){%>
									<td><%=advertisement.plate_nation.slice(0,1).toUpperCase()+advertisement.plate_nation.slice(1)%>
									</td>
									<% }else{%>
									<td>Belirtilmemiş</td>
									<%} %>
								</tr>


							</tbody>
						</table>
					</div>

				</div>
			</div>



		</div>
		<!-- /main content -->

	</div>
	<!-- /page content -->
	<%-include("partials/footer") %>


</body>

