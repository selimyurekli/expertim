<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('partials/head')  %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
</head>

<body class="">
    <%-include("partials/KayıtOlNavbar") %>
    <div class="page-content">

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Content area -->
            <div class="content d-flex justify-content-center align-items-center">

                <!-- Registration form -->
                <form class="login-form" action=<%=postUrl%>  method="POST">
                    <div class="card mb-0">
                        <div class="card-body" id="cardbody">
                            <div class="text-center mb-3">
                                <i
                                    class="icon-lock icon-2x text-orange border-orange border-3 rounded-round p-3 mb-3 mt-1"></i>
                                <h5 class="mb-0">Parolanızı Sıfırlayın</h5>
                                <span class="d-block text-muted">Tüm alanları doldurunuz</span>
                            </div>

                            <div class="form-group text-center text-muted content-divider">
                                <span class="px-2"></span>
                            </div>
                            


                            <div class="form-group form-group-feedback form-group-feedback-left">
                                <input type="password" required id="password" name="newPassword" class="form-control"
                                    placeholder="Yeni şifre">
                                <div class="form-control-feedback">
                                    <i class="icon-user-lock text-muted"></i>
                                </div>
                            </div>
                            <div class="form-group form-group-feedback form-group-feedback-left">
                                <input type="password"  id="repeat-password" required class="form-control"
                                    placeholder="Yeni şifrenizi doğrulayın">
                                <span id = "message"></span>    
                                <div class="form-control-feedback">
                                    <i class="icon-user-lock text-muted"></i>
                                </div>
                            </div>
                            <button type="submit" id="submitBut" disabled class="btn bg-teal-400 btn-block legitRipple">Parolanızı Değiştirin
                                <i class="icon-circle-right2 ml-2"></i></button>
                        </div>
                    </div>
                </form>
                <!-- /registration form -->

            </div>
            <!-- /content area -->


        </div>
        <!-- /main content -->

    </div>


    <!-- /page content -->
    <footer style="position: absolute; bottom: 0; right: 0; left: 0;">
        <%-include("partials/footer") %>

    </footer>
    <script>
        var btn = document.getElementById("submitBut")
        $('#password, #repeat-password').on('keyup', function () {
            if ($('#password').val() == $('#repeat-password').val()) {
                btn.disabled = false
                $('#message').html('Matching').css('color', 'green');
            } else
                $('#message').html('Not Matching').css('color', 'red');
        });




    </script>

</body>

</html>